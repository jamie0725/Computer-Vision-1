function visualize(input_image)

subplot(2,2,1);     % subplot(x,y,n)x表示显示的行数，y表示列数，n表示第几幅图片
imshow(input_image);

subplot(2,2,2);
image_1 = zeros(size(input_image));
image_1(:,:,1) = input_image(:,:,1);
imshow(input_image);
subplot(2,2,3);
imshow(input_image);
subplot(2,2,4);
imshow(input_image);

end

