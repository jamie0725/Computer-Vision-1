function [output_image] = rgb2opponent(input_image)
% converts an RGB image into opponent color space
size_image = size(input_image);
opponent_image = zeros(size_image);
R = input_image(:,:,1);
G = input_image(:,:,2);
B = input_image(:,:,3);

opponent_image(:,:,1) = (R - G)/sqrt(2);
opponent_image(:,:,1) = (R +G -2 *B)/sqrt(2);

end

